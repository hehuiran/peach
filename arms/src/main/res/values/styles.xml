<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SwipeBackLayout">
        <item name="edge_size">50dip</item>
        <item name="shadow_left">@drawable/shadow_left</item>
        <item name="shadow_right">@drawable/shadow_right</item>
        <item name="shadow_bottom">@drawable/shadow_bottom</item>
    </style>

    <!--dialog-->
    <style name="dialog_from_bottom_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/translate_enter</item>
        <item name="android:windowExitAnimation">@anim/translate_exit</item>
    </style>

    <style name="dialog_from_top_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/translate_top_enter</item>
        <item name="android:windowExitAnimation">@anim/translate_top_exit</item>
    </style>

    <style name="dialog_from_alpha_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/alpha_enter</item>
        <item name="android:windowExitAnimation">@anim/alpha_exit</item>
    </style>

    <style name="alert_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 模糊 -->
    </style>
</resources>