<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="10dp"
        android:paddingStart="10dp">

        <android.support.v7.widget.CardView
            android:id="@+id/card_income_total"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="7dp"
            app:cardElevation="2dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true"
            app:layout_constraintDimensionRatio="h,371:191"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_total_income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:textColor="@color/black"
                    android:textSize="40sp"
                    tools:text="999.00"/>

                <View
                    android:layout_width="32dp"
                    android:layout_height="4dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_solid_ff1673_radius_2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:includeFontPadding="false"
                    android:text="@string/total_income"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <View
            android:id="@+id/v_income_preview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape_solid_white_radius_7"
            app:layout_constraintBottom_toBottomOf="@+id/space_one"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_income_total"/>

        <TextView
            android:id="@+id/tv_income_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="14dp"
            android:text="@string/income_preview"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/v_income_preview"
            app:layout_constraintTop_toTopOf="@+id/v_income_preview"/>

        <TextView
            android:id="@+id/tv_look_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:drawableEnd="@mipmap/ic_right_arrow"
            android:drawablePadding="9dp"
            android:gravity="center_vertical"
            android:text="@string/look_detail"
            android:textColor="@color/color_808080"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_income_preview"
            app:layout_constraintEnd_toEndOf="@+id/v_income_preview"
            app:layout_constraintTop_toTopOf="@+id/tv_income_preview"/>

        <View
            android:id="@+id/v_line_one"
            android:layout_width="0dp"
            android:layout_height="@dimen/line_width"
            android:layout_marginTop="14dp"
            app:layout_constraintEnd_toEndOf="@+id/tv_look_detail"
            app:layout_constraintStart_toStartOf="@+id/tv_income_preview"
            app:layout_constraintTop_toBottomOf="@+id/tv_income_preview"/>

        <TextView
            android:id="@+id/tv_forecast_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/forecast_income"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/tv_forecast_two"
            app:layout_constraintStart_toStartOf="@+id/v_income_preview"
            app:layout_constraintTop_toBottomOf="@+id/v_line_one"/>

        <TextView
            android:id="@+id/tv_forecast_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/forecast_income"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_forecast_one"
            app:layout_constraintEnd_toStartOf="@+id/tv_settlement_one"
            app:layout_constraintStart_toEndOf="@+id/tv_forecast_one"
            app:layout_constraintTop_toTopOf="@+id/tv_forecast_one"/>

        <TextView
            android:id="@+id/tv_settlement_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/settlement_income"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_forecast_one"
            app:layout_constraintEnd_toStartOf="@+id/tv_settlement_two"
            app:layout_constraintStart_toEndOf="@+id/tv_forecast_two"
            app:layout_constraintTop_toTopOf="@+id/tv_forecast_one"/>

        <TextView
            android:id="@+id/tv_settlement_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/settlement_income"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_forecast_one"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_settlement_one"
            app:layout_constraintTop_toTopOf="@+id/tv_forecast_one"/>

        <TextView
            android:id="@+id/tv_current_income"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/color_ff1673"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_forecast_one"
            app:layout_constraintStart_toStartOf="@+id/tv_forecast_one"
            app:layout_constraintTop_toBottomOf="@+id/tv_forecast_one"
            tools:text="@string/rmb"/>

        <TextView
            android:id="@+id/tv_last_income"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/color_ff1673"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_current_income"
            app:layout_constraintEnd_toEndOf="@+id/tv_forecast_two"
            app:layout_constraintStart_toStartOf="@+id/tv_forecast_two"
            app:layout_constraintTop_toTopOf="@+id/tv_current_income"
            tools:text="@string/rmb"/>

        <TextView
            android:id="@+id/tv_current_settlement"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/color_ff1673"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_current_income"
            app:layout_constraintEnd_toEndOf="@+id/tv_settlement_one"
            app:layout_constraintStart_toStartOf="@+id/tv_settlement_one"
            app:layout_constraintTop_toTopOf="@+id/tv_current_income"
            tools:text="@string/rmb"/>

        <TextView
            android:id="@+id/tv_last_settlement"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/color_ff1673"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_current_income"
            app:layout_constraintEnd_toEndOf="@+id/tv_settlement_two"
            app:layout_constraintStart_toStartOf="@+id/tv_settlement_two"
            app:layout_constraintTop_toTopOf="@+id/tv_current_income"
            tools:text="@string/rmb"/>

        <TextView
            android:id="@+id/tv_this_month_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/this_month"
            android:textColor="@color/color_808080"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_current_income"
            app:layout_constraintStart_toStartOf="@+id/tv_current_income"
            app:layout_constraintTop_toBottomOf="@+id/tv_current_income"/>

        <TextView
            android:id="@+id/tv_last_month_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/last_month"
            android:textColor="@color/color_808080"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_this_month_one"
            app:layout_constraintEnd_toEndOf="@+id/tv_last_income"
            app:layout_constraintStart_toStartOf="@+id/tv_last_income"
            app:layout_constraintTop_toTopOf="@+id/tv_this_month_one"/>

        <TextView
            android:id="@+id/tv_this_month_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/this_month"
            android:textColor="@color/color_808080"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_this_month_one"
            app:layout_constraintEnd_toEndOf="@+id/tv_current_settlement"
            app:layout_constraintStart_toStartOf="@+id/tv_current_settlement"
            app:layout_constraintTop_toTopOf="@+id/tv_this_month_one"/>

        <TextView
            android:id="@+id/tv_last_month_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/last_month"
            android:textColor="@color/color_808080"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_this_month_one"
            app:layout_constraintEnd_toEndOf="@+id/tv_last_settlement"
            app:layout_constraintStart_toStartOf="@+id/tv_last_settlement"
            app:layout_constraintTop_toTopOf="@+id/tv_this_month_one"/>

        <Space
            android:id="@+id/space_one"
            android:layout_width="0dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@id/tv_this_month_one"/>

        <View
            android:id="@+id/v_today"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape_solid_white_radius_7"
            app:layout_constraintBottom_toBottomOf="@+id/space_two"
            app:layout_constraintEnd_toEndOf="@+id/v_income_preview"
            app:layout_constraintStart_toStartOf="@+id/v_income_preview"
            app:layout_constraintTop_toBottomOf="@+id/v_income_preview"/>

        <TextView
            android:id="@+id/tv_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="14dp"
            android:text="@string/today"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/v_today"
            app:layout_constraintTop_toTopOf="@+id/v_today"/>

        <TextView
            android:id="@+id/tv_payment_count_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="@string/payment_count"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/tv_forecast_commission_one"
            app:layout_constraintStart_toStartOf="@+id/v_today"
            app:layout_constraintTop_toBottomOf="@+id/tv_today"/>

        <TextView
            android:id="@+id/tv_forecast_commission_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/forecast_commission"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_payment_count_one"
            app:layout_constraintEnd_toEndOf="@+id/v_today"
            app:layout_constraintStart_toEndOf="@+id/tv_payment_count_one"
            app:layout_constraintTop_toTopOf="@+id/tv_payment_count_one"/>

        <TextView
            android:id="@+id/tv_today_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="@color/color_ff1673"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_payment_count_one"
            app:layout_constraintStart_toStartOf="@+id/tv_payment_count_one"
            app:layout_constraintTop_toBottomOf="@+id/tv_payment_count_one"
            tools:text="99"/>

        <TextView
            android:id="@+id/tv_today_commission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_ff1673"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_forecast_commission_one"
            app:layout_constraintStart_toStartOf="@+id/tv_forecast_commission_one"
            app:layout_constraintTop_toTopOf="@+id/tv_today_count"
            app:layout_constraintBottom_toBottomOf="@+id/tv_today_count"
            tools:text="99"/>
        <Space
            android:id="@+id/space_two"
            android:layout_width="0dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_today_count"/>

        <View
            android:id="@+id/v_yesterday"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape_solid_white_radius_7"
            app:layout_constraintBottom_toBottomOf="@+id/space_three"
            app:layout_constraintEnd_toEndOf="@+id/v_today"
            app:layout_constraintStart_toStartOf="@+id/v_today"
            app:layout_constraintTop_toBottomOf="@+id/v_today"/>

        <TextView
            android:id="@+id/tv_yesterday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="14dp"
            android:text="@string/yesterday"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/v_yesterday"
            app:layout_constraintTop_toTopOf="@+id/v_yesterday"/>

        <TextView
            android:id="@+id/tv_payment_count_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="@string/payment_count"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/tv_forecast_commission_one"
            app:layout_constraintStart_toStartOf="@+id/v_yesterday"
            app:layout_constraintTop_toBottomOf="@+id/tv_yesterday"/>

        <TextView
            android:id="@+id/tv_forecast_commission_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/forecast_commission"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_payment_count_two"
            app:layout_constraintEnd_toEndOf="@+id/v_yesterday"
            app:layout_constraintStart_toEndOf="@+id/tv_payment_count_two"
            app:layout_constraintTop_toTopOf="@+id/tv_payment_count_two"/>

        <TextView
            android:id="@+id/tv_yesterday_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="@color/color_ff1673"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_payment_count_two"
            app:layout_constraintStart_toStartOf="@+id/tv_payment_count_two"
            app:layout_constraintTop_toBottomOf="@+id/tv_payment_count_two"
            tools:text="99"/>

        <TextView
            android:id="@+id/tv_yesterday_commission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_ff1673"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_forecast_commission_two"
            app:layout_constraintStart_toStartOf="@+id/tv_forecast_commission_two"
            app:layout_constraintTop_toTopOf="@+id/tv_yesterday_count"
            app:layout_constraintBottom_toBottomOf="@+id/tv_yesterday_count"
            tools:text="99"/>
        <Space
            android:id="@+id/space_three"
            android:layout_width="0dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_yesterday_count"/>

        <View
            android:id="@+id/v_income_source"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape_solid_white_radius_7"
            app:layout_constraintBottom_toBottomOf="@+id/space_four"
            app:layout_constraintEnd_toEndOf="@+id/v_yesterday"
            app:layout_constraintStart_toStartOf="@+id/v_yesterday"
            app:layout_constraintTop_toBottomOf="@+id/v_yesterday"/>

        <TextView
            android:id="@+id/tv_income_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="14dp"
            android:text="@string/income_source"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/v_income_source"
            app:layout_constraintTop_toTopOf="@+id/v_income_source"/>

        <TextView
            android:id="@+id/tv_buy_income"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="@string/buy_income"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/tv_service_provider_income"
            app:layout_constraintStart_toStartOf="@+id/v_income_source"
            app:layout_constraintTop_toBottomOf="@+id/tv_income_source"/>

        <TextView
            android:id="@+id/tv_service_provider_income"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/service_provider_income"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_buy_income"
            app:layout_constraintEnd_toEndOf="@+id/v_income_source"
            app:layout_constraintStart_toEndOf="@+id/tv_buy_income"
            app:layout_constraintTop_toTopOf="@+id/tv_buy_income"/>

        <TextView
            android:id="@+id/tv_buy_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="@color/color_ff1673"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_buy_income"
            app:layout_constraintStart_toStartOf="@+id/tv_buy_income"
            app:layout_constraintTop_toBottomOf="@+id/tv_buy_income"
            tools:text="@string/rmb"/>

        <TextView
            android:id="@+id/tv_service_provider_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_ff1673"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_forecast_commission_two"
            app:layout_constraintStart_toStartOf="@+id/tv_forecast_commission_two"
            app:layout_constraintTop_toTopOf="@+id/tv_buy_money"
            app:layout_constraintBottom_toBottomOf="@+id/tv_buy_money"
            tools:text="99"/>
        <Space
            android:id="@+id/space_four"
            android:layout_width="0dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_buy_money"/>

        <Space
            android:id="@+id/space_five"
            android:layout_width="0dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@+id/space_four"/>
    </android.support.constraint.ConstraintLayout>
</ScrollView>