<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_order_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="@string/order_number"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_order_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:textColor="@color/color_989898"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_order_text"
        app:layout_constraintStart_toEndOf="@+id/tv_order_text"
        app:layout_constraintTop_toTopOf="@+id/tv_order_text"
        tools:text="200237468374"/>

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_order_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_order_text"
        tools:text="已付款"/>

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@+id/tv_order_text"
        app:layout_constraintTop_toBottomOf="@+id/tv_order_text"
        tools:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_status"
        app:layout_constraintStart_toEndOf="@+id/iv_img"
        app:layout_constraintTop_toTopOf="@+id/iv_img"
        tools:text="的风华绝代书法考级大煞风景看电视的数据恢复绥芬河市倒海翻江看电视"/>

    <TextView
        android:id="@+id/tv_income"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_808080"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_img"
        app:layout_constraintStart_toStartOf="@+id/tv_title"
        tools:text="预估收入:"/>

    <TextView
        android:id="@+id/tv_income_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_ff1673"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_income"
        app:layout_constraintStart_toEndOf="@+id/tv_income"
        app:layout_constraintTop_toTopOf="@+id/tv_income"
        tools:text="@string/rmb"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_808080"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_income"
        app:layout_constraintEnd_toEndOf="@+id/tv_title"
        app:layout_constraintTop_toTopOf="@+id/tv_income"
        tools:text="2018-12-12"/>

    <TextView
        android:id="@+id/tv_order_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textColor="@color/color_808080"
        android:textSize="11sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_income"
        app:layout_constraintStart_toStartOf="@+id/tv_title"
        tools:text="@string/order_amount"/>

    <View
        style="@style/line_style"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_img"/>
</android.support.constraint.ConstraintLayout>