<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root">

    <View
        android:id="@+id/v_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/shape_solid_white_radius_top_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_wechat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="9dp"
        android:drawableTop="@mipmap/ic_wechat"
        android:gravity="center_horizontal"
        android:text="@string/wechat"
        android:textColor="@color/color_515151"
        android:textSize="10sp"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toTopOf="@+id/tv_cancel"
        app:layout_constraintEnd_toStartOf="@+id/tv_circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="9dp"
        android:drawableTop="@mipmap/ic_wechat_circle"
        android:gravity="center_horizontal"
        android:text="@string/wechat_circle"
        android:textColor="@color/color_515151"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_qq"
        app:layout_constraintBottom_toBottomOf="@+id/tv_wechat"
        app:layout_constraintStart_toEndOf="@+id/tv_wechat"
        app:layout_constraintTop_toTopOf="@+id/tv_wechat"/>

    <TextView
        android:id="@+id/tv_qq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="9dp"
        android:drawableTop="@mipmap/ic_qq"
        android:gravity="center_horizontal"
        android:text="@string/qq"
        android:textColor="@color/color_515151"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_qzone"
        app:layout_constraintBottom_toBottomOf="@+id/tv_wechat"
        app:layout_constraintStart_toEndOf="@+id/tv_circle"
        app:layout_constraintTop_toTopOf="@+id/tv_wechat"/>

    <TextView
        android:id="@+id/tv_qzone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="9dp"
        android:drawableTop="@mipmap/ic_qzone"
        android:gravity="center_horizontal"
        android:text="@string/qzong"
        android:textColor="@color/color_515151"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_sina"
        app:layout_constraintBottom_toBottomOf="@+id/tv_wechat"
        app:layout_constraintStart_toEndOf="@+id/tv_qq"
        app:layout_constraintTop_toTopOf="@+id/tv_wechat"/>

    <TextView
        android:id="@+id/tv_sina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="9dp"
        android:drawableTop="@mipmap/ic_sina"
        android:gravity="center_horizontal"
        android:text="@string/sina"
        android:textColor="@color/color_515151"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/tv_wechat"
        app:layout_constraintStart_toEndOf="@+id/tv_qzone"
        app:layout_constraintTop_toTopOf="@+id/tv_wechat"/>

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:background="@drawable/shape_stroke_05_ff1673_radius_22"
        android:textColor="@color/color_ff1673"
        android:text="@string/cancel"
        android:gravity="center"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tv_wechat"
        app:layout_constraintEnd_toEndOf="@+id/tv_sina"
        app:layout_constraintTop_toBottomOf="@+id/tv_wechat"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="33dp"/>
</android.support.constraint.ConstraintLayout>