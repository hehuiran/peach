<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:id="@+id/status_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="9dp"
            android:paddingEnd="15dp"
            android:paddingStart="7.5dp"
            android:paddingTop="9dp"
            android:scaleType="center"
            android:src="@mipmap/ic_setting_black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/iv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="9dp"
            android:paddingEnd="7.5dp"
            android:paddingStart="7.5dp"
            android:paddingTop="9dp"
            android:src="@mipmap/ic_message_black"
            app:layout_constraintEnd_toStartOf="@+id/iv_setting"
            app:layout_constraintTop_toTopOf="@+id/iv_setting"/>
    </android.support.constraint.ConstraintLayout>

    <me.jessyan.peach.shop.widget.refresh.PullRefreshBannerView
        android:id="@+id/pull_refresh_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.constraint.Guideline
                    android:id="@+id/gl_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.7"/>

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="15dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:riv_oval="true"
                    tools:src="@mipmap/ic_launcher"/>

                <TextView
                    android:id="@+id/tv_members"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_stroke_05_ff1673_radius_10"
                    android:paddingBottom="3dp"
                    android:paddingEnd="15dp"
                    android:paddingStart="15dp"
                    android:paddingTop="3dp"
                    android:text="@string/regular_members"
                    android:textColor="@color/color_ff1673"
                    android:textSize="10sp"
                    app:layout_constraintEnd_toEndOf="@+id/gl_one"
                    app:layout_constraintTop_toTopOf="@+id/iv_avatar"/>

                <TextView
                    android:id="@+id/tv_nickname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="15dp"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="@id/tv_members"
                    app:layout_constraintEnd_toStartOf="@+id/tv_members"
                    app:layout_constraintStart_toEndOf="@+id/iv_avatar"
                    app:layout_constraintTop_toTopOf="@+id/tv_members"
                    tools:text="好的风景更多是法国大使馆发的"/>

                <TextView
                    android:id="@+id/tv_invite_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toTopOf="@+id/tv_fans"
                    app:layout_constraintStart_toStartOf="@+id/tv_nickname"
                    app:layout_constraintTop_toBottomOf="@+id/tv_members"
                    tools:text="@string/invite_code"/>

                <TextView
                    android:id="@+id/tv_copy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/shape_solid_ff1673_radius_10"
                    android:paddingBottom="3dp"
                    android:paddingEnd="15dp"
                    android:paddingStart="15dp"
                    android:paddingTop="3dp"
                    android:text="@string/copy"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_invite_code"
                    app:layout_constraintStart_toEndOf="@+id/tv_invite_code"
                    app:layout_constraintTop_toTopOf="@+id/tv_invite_code"/>

                <TextView
                    android:id="@+id/tv_fans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_avatar"
                    app:layout_constraintStart_toStartOf="@+id/tv_nickname"
                    tools:text="@string/fans_count"/>

                <TextView
                    android:id="@+id/tv_integral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_fans"
                    app:layout_constraintStart_toEndOf="@+id/tv_fans"
                    app:layout_constraintTop_toTopOf="@+id/tv_fans"
                    tools:text="@string/integral_count"/>

                <android.support.constraint.Guideline
                    android:id="@+id/gl_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.5"/>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_income"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginEnd="7dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="27dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="7dp"
                    app:cardElevation="2dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="true"
                    app:layout_constraintDimensionRatio="h,160:125"
                    app:layout_constraintEnd_toEndOf="@+id/gl_two"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_avatar">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/total_income"
                            android:textColor="@color/color_030303"
                            android:textSize="11sp"/>

                        <TextView
                            android:id="@+id/tv_income"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:textColor="@color/black"
                            android:textSize="24sp"
                            tools:text="999.00"/>

                        <View
                            android:layout_width="16dp"
                            android:layout_height="4dp"
                            android:background="@drawable/shape_solid_ff1673_radius_2"/>

                        <TextView
                            android:id="@+id/tv_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:background="@drawable/shape_stroke_05_ff1673_radius_10"
                            android:paddingBottom="3dp"
                            android:paddingEnd="15dp"
                            android:paddingStart="15dp"
                            android:paddingTop="3dp"
                            android:text="@string/detail"
                            android:textColor="@color/color_ff1673"
                            android:textSize="10sp"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_balance"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginStart="7dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="7dp"
                    app:cardElevation="2dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="true"
                    app:layout_constraintBottom_toBottomOf="@+id/card_income"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/gl_two"
                    app:layout_constraintTop_toTopOf="@+id/card_income">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/can_use_balance"
                            android:textColor="@color/color_030303"
                            android:textSize="11sp"/>

                        <TextView
                            android:id="@+id/tv_balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:textColor="@color/black"
                            android:textSize="24sp"
                            tools:text="999.00"/>

                        <View
                            android:layout_width="16dp"
                            android:layout_height="4dp"
                            android:background="@drawable/shape_solid_ff1673_radius_2"/>

                        <TextView
                            android:id="@+id/tv_withdraw"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:background="@drawable/shape_stroke_05_ff1673_radius_10"
                            android:paddingBottom="3dp"
                            android:paddingEnd="15dp"
                            android:paddingStart="15dp"
                            android:paddingTop="3dp"
                            android:text="@string/withdraw"
                            android:textColor="@color/color_ff1673"
                            android:textSize="10sp"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <View
                    android:id="@+id/space_one"
                    style="@style/space_style"
                    android:layout_marginTop="18dp"
                    app:layout_constraintTop_toBottomOf="@+id/card_income"/>

                <TextView
                    android:id="@+id/tv_my_order"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:drawablePadding="5dp"
                    android:drawableTop="@mipmap/ic_my_order"
                    android:gravity="center"
                    android:text="@string/my_order"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toStartOf="@+id/tv_integral_order"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/space_one"/>

                <TextView
                    android:id="@+id/tv_integral_order"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:drawableTop="@mipmap/ic_integral_order"
                    android:gravity="center"
                    android:text="@string/integral_order"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_my_order"
                    app:layout_constraintEnd_toStartOf="@+id/tv_my_fans"
                    app:layout_constraintStart_toEndOf="@+id/tv_my_order"
                    app:layout_constraintTop_toTopOf="@+id/tv_my_order"/>

                <TextView
                    android:id="@+id/tv_my_fans"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:drawableTop="@mipmap/ic_my_fans"
                    android:gravity="center"
                    android:text="@string/my_fans"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_integral_order"
                    app:layout_constraintEnd_toStartOf="@+id/tv_invite_friend"
                    app:layout_constraintStart_toEndOf="@+id/tv_integral_order"
                    app:layout_constraintTop_toTopOf="@+id/tv_integral_order"/>

                <TextView
                    android:id="@+id/tv_invite_friend"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:drawableTop="@mipmap/ic_invite_friend"
                    android:gravity="center"
                    android:text="@string/invite_friend"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_my_fans"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_my_fans"
                    app:layout_constraintTop_toTopOf="@+id/tv_my_fans"/>

                <View
                    android:id="@+id/space_two"
                    style="@style/space_style"
                    android:layout_marginTop="18dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_my_order"/>

                <!--round 5dp-->
                <ImageView
                    android:id="@+id/iv_advertising"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="16dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintDimensionRatio="h,355:80"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/space_two"
                    tools:src="@mipmap/ic_launcher"/>

                <View
                    android:id="@+id/space_three"
                    style="@style/space_style"
                    android:layout_marginTop="18dp"
                    app:layout_constraintTop_toBottomOf="@+id/iv_advertising"/>

                <ImageView
                    android:id="@+id/iv_my_tool"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"
                    android:src="@mipmap/ic_my_tools"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/space_three"/>

                <TextView
                    android:id="@+id/tv_service_provider"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:drawablePadding="5dp"
                    android:drawableTop="@mipmap/ic_service_providers"
                    android:gravity="center"
                    android:text="@string/service_provider"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    app:layout_constraintEnd_toStartOf="@+id/tv_new_user_guide"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_my_tool"/>

                <TextView
                    android:id="@+id/tv_new_user_guide"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:drawableTop="@mipmap/ic_new_user_guide"
                    android:gravity="center"
                    android:text="@string/new_user_guideline"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_service_provider"
                    app:layout_constraintEnd_toStartOf="@+id/tv_my_collection"
                    app:layout_constraintStart_toEndOf="@+id/tv_service_provider"
                    app:layout_constraintTop_toTopOf="@+id/tv_service_provider"/>

                <TextView
                    android:id="@+id/tv_my_collection"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:drawableTop="@mipmap/ic_my_collection"
                    android:gravity="center"
                    android:text="@string/my_collection"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_new_user_guide"
                    app:layout_constraintEnd_toStartOf="@+id/tv_common_problem"
                    app:layout_constraintStart_toEndOf="@+id/tv_new_user_guide"
                    app:layout_constraintTop_toTopOf="@+id/tv_new_user_guide"/>

                <TextView
                    android:id="@+id/tv_common_problem"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:drawableTop="@mipmap/ic_common_problem"
                    android:gravity="center"
                    android:text="@string/common_problem"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_my_collection"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_my_collection"
                    app:layout_constraintTop_toTopOf="@+id/tv_my_collection"/>

                <TextView
                    android:id="@+id/tv_contract_customer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:drawablePadding="5dp"
                    android:drawableTop="@mipmap/ic_contract_customer"
                    android:gravity="center"
                    android:text="@string/service_provider"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    app:layout_constraintEnd_toStartOf="@+id/tv_platform_notice"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_service_provider"/>

                <TextView
                    android:id="@+id/tv_platform_notice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:drawableTop="@mipmap/ic_platform_notice"
                    android:gravity="center"
                    android:text="@string/platform_notice"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_contract_customer"
                    app:layout_constraintEnd_toStartOf="@+id/tv_feedback"
                    app:layout_constraintStart_toEndOf="@+id/tv_contract_customer"
                    app:layout_constraintTop_toTopOf="@+id/tv_contract_customer"/>

                <TextView
                    android:id="@+id/tv_feedback"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:drawableTop="@mipmap/ic_feedback"
                    android:gravity="center"
                    android:text="@string/feedback"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_platform_notice"
                    app:layout_constraintEnd_toStartOf="@+id/tv_about_us"
                    app:layout_constraintStart_toEndOf="@+id/tv_platform_notice"
                    app:layout_constraintTop_toTopOf="@+id/tv_platform_notice"/>

                <TextView
                    android:id="@+id/tv_about_us"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:drawableTop="@mipmap/ic_about_us"
                    android:gravity="center"
                    android:text="@string/about_us"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_feedback"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_feedback"
                    app:layout_constraintTop_toTopOf="@+id/tv_feedback"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_contract_customer"/>
            </android.support.constraint.ConstraintLayout>
        </android.support.v4.widget.NestedScrollView>
    </me.jessyan.peach.shop.widget.refresh.PullRefreshBannerView>

</LinearLayout>